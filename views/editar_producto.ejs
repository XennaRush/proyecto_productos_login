<%- include("templates/header", { titulo: titulo || "Editar Producto" }) %>

<form action="/admin/productos/editar" method="POST" class="mb-3">
  <input type="hidden" name="id" value="<%= producto._id %>">

  <label>Nombre</label>
  <input name="nombre" class="form-control mb-2" value="<%= producto.nombre %>" required>

  <label>Precio</label>
  <input name="precio" type="number" step="0.01" class="form-control mb-2" value="<%= producto.precio %>" required>

  <label>Stock</label>
  <input name="stock" type="number" class="form-control mb-2" value="<%= producto.stock %>" required>

  <label>Categor√≠a</label>
  <input name="categoria" class="form-control mb-3" value="<%= producto.categoria %>" required>

  <button class="btn btn-success" type="submit">Guardar cambios</button>
  <a href="/admin/productos" class="btn btn-secondary ms-2">Cancelar</a>
</form>

<%- include("templates/footer") %>
